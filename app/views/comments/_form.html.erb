<%= form_for([@post, @post.comments.build]) do |f| %>

	 <div class="field">
	    <%#= f.label :body %><br />
	    <%= f.text_area :body %>
	 </div><br/>
	<div class="field">
	    <%= f.label :commenter %> : 
		<%= link_to current_user.name, user_path %>
		<%= f.hidden_field :user_id, :value => current_user.id %>
	    <%= f.hidden_field :commenter, :value => current_user.name %>

	 </div> <br/>
	 <div class="actions">
	    <%= f.submit %>
	 </div>
	
<% end %>

